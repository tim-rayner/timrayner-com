{
  "files": [],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/env.d.ts"],
  "exclude": ["node_modules", "dist", "types"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist"
  }
}
